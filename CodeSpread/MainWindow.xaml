<Window x:Class="CodeSpread.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeSpread"
        xmlns:views="clr-namespace:CodeSpread.Views"
        xmlns:controls="clr-namespace:CodeSpread.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    <Grid>
        <Border x:Name="BorderMainWindow" CornerRadius="8" Background="#222222" BorderBrush="#444444" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Title Bar -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Main View -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <controls:CustomTitleBar Grid.Row="0"/>
                <controls:NavbarMenu Grid.Row="1"/>
                <ContentControl Grid.Row="2" Content="{Binding CurrentView}" />
            </Grid>
        </Border>

        <!-- Resize Borders -->
        <Border x:Name="ResizeBorderLeft" Background="Transparent" Width="5" HorizontalAlignment="Left" Cursor="SizeWE" MouseMove="Resize_MouseMove" MouseDown="Resize_MouseDown" MouseUp="Resize_MouseUp" />
        <Border x:Name="ResizeBorderRight" Background="Transparent" Width="5" HorizontalAlignment="Right" Cursor="SizeWE" MouseMove="Resize_MouseMove" MouseDown="Resize_MouseDown" MouseUp="Resize_MouseUp" />
        <Border x:Name="ResizeBorderTop" Background="Transparent" Height="5" VerticalAlignment="Top" Cursor="SizeNS" MouseMove="Resize_MouseMove" MouseDown="Resize_MouseDown" MouseUp="Resize_MouseUp" />
        <Border x:Name="ResizeBorderBottom" Background="Transparent" Height="5" VerticalAlignment="Bottom" Cursor="SizeNS" MouseMove="Resize_MouseMove" MouseDown="Resize_MouseDown" MouseUp="Resize_MouseUp" />
    </Grid>
</Window>
