<UserControl x:Class="CodeSpread.UserControls.NavbarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeSpread.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu Background="#222222" HorizontalAlignment="Left" Height="25" Width="Auto" Margin="19,0,0,0" FontSize="15">
            <!-- File Menu -->
            <MenuItem Header="File" Background="#222222" Foreground="White">
                <MenuItem Header="Open File" Background="#333333" Foreground="White" Click="OpenFile_Click"/>
            </MenuItem>

            <!-- Navigation Menu -->
            <MenuItem Header="Navigation" Background="#222222" Foreground="White">
                <MenuItem Header="About" Background="#333333" Foreground="White" Click="NavigateToAbout_Click"/>
                <MenuItem Header="Decompile" Background="#333333" Foreground="White" Click="NavigateToDecompile_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
